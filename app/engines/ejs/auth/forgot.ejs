<% include ../common/head %>

<main class="row">
    <div class="columns">

        <h1>Forgot Password</h1>

        <% if (message!="") { %>
        <div class="callout <%= message.type %>">
            <%= message.text %>
        </div>
        <% } %>


        <form action="/login/reset" method="POST">

            <label for="Username">Username
                <input type="email" name="username" id="Username">
            </label>

            <input type="hidden" name="_csrf" value="<%= request.csrfToken() %>">

            <button type="submit" class="button success">Reset</button>

            <a href="/login" class="button hollow">Back to Login</a>
        </form>
    </div>
</main>

<% include ../common/footer %>